// === TUTORIAL 118: Panning ===

set tempo 90
//A panning from left to right 
list pan [-0.9 -0.7 -0.5 -0.2 0.1 0.3 0.5 0.7 0.9]

//A choir and a tom
new sample choir_o time(1/8) pan(pan) 
new sample tom_nord_lo time(1/2) pan([-1 1])

//Just a beat 
new sample kick_909_long time(1) pan(random)
new sample hat_909_short time(1/8) fx(double)
